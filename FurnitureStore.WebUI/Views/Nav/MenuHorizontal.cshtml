@model IEnumerable<string>
<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Product", new
{
    @class =
    "btn btn-defalt btn-sm"
})
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
   {
       Controller = "Product",
       Action = "List",
       category = link,
       page = 1
   },
   new
   {
       @class = "btn btn-defalt btn-sm"
       + (link == ViewBag.SelectCategory ? " btn-primary" : "")
   }
       )
    }
</div>
